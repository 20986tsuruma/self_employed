<div class="row">
	<h2>お問い合わせ</h2>

  <%= form_for(@contact) do |f| %>
	<div class="form-group">
		<div class="row">
			<div class="col-xs-2">
				<%= f.label "氏名" %>
			</div>
			<div class="col-xs-3">
				<%= f.text_field :name %>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-xs-2">
				<%= f.label "会社名" %>
			</div>
			<div class="col-xs-3">
				<%= f.text_field :company_name %>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-xs-2">
				<%= f.label "メールアドレス" %>
			</div>
			<div class="col-xs-3">
				<%= f.text_field :email %>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-xs-2">
				<%= f.label "電話番号(ハイフンなし)" %>
			</div>
			<div class="col-xs-3">
				<%= f.text_field :telephone_number %>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-xs-2">
				<%= f.label "お問い合わせ内容" %>
			</div>
			<div class="col-xs-3">
				<%= f.text_area :contact_detail %>
			</div>
		</div>
	</div>

	<div class="row">
		<%= f.submit 'お問い合わせ内容を送信する', class: "btn btn-primary btn-new-register btn-lg" %>
	</div>
  <% end %>
</div>