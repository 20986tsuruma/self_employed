<div class="row">
	<h2>お問い合わせ</h2>

  <%= form_for :contact, url: confirm_contacts_path do |f| %>

  <% if @contact.errors.any? %>
	<div class="alert alert-danger" role="alert">
		<strong>入力内容にエラーがあります</strong>
		<ul>
			<% @contact.errors.each do |attr, msg| %>
			  <li><%= msg %></li>
			<% end %>
		</ul>
	</div>
  <% end %>

  <div class="col-xs-8">
  <table class="table">
    <tr>
    	<th>名前<span class="text-danger">（必須）</span></th>
    	<td><%= f.text_field :name %></td>
    </tr>

    <tr>
    	<th>会社名</th>
    	<td><%= f.text_field :company_name %></td>
    </tr>

    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <th>電話番号(ハイフンなし)<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>

    <tr>
      <th>お問い合わせ内容<span class="text-danger">（必須）</span></th>
      <td><%= f.text_area :contact_detail %></td>
    </tr>

  </table>

  <div class="row">
      <%= f.submit 'お問い合わせ内容を確認する', class: "btn btn-primary btn-new-register btn-lg" %>
  </div>
  </div>
  <% end %>
</div>