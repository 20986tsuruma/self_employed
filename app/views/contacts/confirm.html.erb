<div class="row">
  <h1>お問い合わせ</h1>

  <table class="table">
    <tr>
      <th>名前</th>
      <td><%= @contact.name %></td>
    </tr>

    <tr>
      <th>会社名</th>
      <td><%= @contact.company_name %></td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td><%= @contact.email %></td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td><%= @contact.telephone_number %></td>
    </tr>

    <tr>
      <th>お問い合わせ内容</th>
      <td><%= simple_format(@contact.contact_detail) %></td>
    </tr>
  </table>

  <%= form_for :contact, url: new_contacts_path do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :company_name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :telephone_number %>
    <%= f.hidden_field :contact_detail %>
    <%= f.submit '入力画面へ戻る', class: "btn btn-secondary"%>
  <% end %>

  <%= form_for :contact, url: contacts_path do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :company_name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :telephone_number %>
    <%= f.hidden_field :contact_detail %>
    <%= f.submit '送信する', class: 'btn btn-primary' %>
  <% end %>