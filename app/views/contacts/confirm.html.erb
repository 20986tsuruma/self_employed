<div class="page-header">
  <h1>お問い合わせ</h1>
</div>

<%= form_for @contact, :url => contact_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @contact.name %>
      </td>
    </tr>

    <tr>
      <th>会社名</th>
      <td>
        <%= f.hidden_field :company_name %>
        <%= @contact.company_name %>
      </td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @contact.email %>
      </td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td>
        <%= f.hidden_field :telephone_number %>
        <%= @contact.telephone_number %>
      </td>
    </tr>

    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :contact_detail %>
        <%= simple_format(@contact.contact_detail) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', :class => 'btn btn-primary' %>
<% end %>