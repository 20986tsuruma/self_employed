<div class="row">
	<h2>お見積り内容詳細</h2>

	<div class="col-xs-7">
		<label class="col-xs-3">日時</label>
		<div class="col-xs-3">
			<%= @request.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
		</div>

		<label class="col-xs-3">氏名</label>
		<div class="col-xs-3">
			<%= @request.name %>
		</div>

		<label class="col-xs-3">会社名</label>
		<div class="col-xs-3">
			<%= @request.company_name %>
		</div>

		<label class="col-xs-3">メールアドレス</label>
		<div class="col-xs-3">
			<%= @request.email %>
		</div>

		<label class="col-xs-3">電話番号</label>
		<div class="col-xs-3">
			<%= @request.telephone_number %>
		</div>

		<label class="col-xs-3">お見積り内容</label>
		<div class="col-xs-3">
			<%= @request.request_detail %>
		</div>
	</div>
</div>