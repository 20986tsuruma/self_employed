<div class="row">
	<h2>お問い合わせ内容詳細</h2>

	<div class="col-xs-8">
		<table class="table">
			<tbody>
				<tr>
					<th>日時</th>
					<td><%= @contact.created_at.strftime('%Y/%m/%d') %></td>
				</tr>

				<tr>
					<th>氏名</th>
					<td><%= @contact.name %></td>
				</tr>

				<tr>
					<th>会社名</th>
					<td><%= @contact.company_name %></td>
				</tr>

				<tr>
					<th>メールアドレス</th>
					<td><%= @contact.email %></td>
				</tr>

				<tr>
					<th>電話番号</th>
					<td><%= @contact.telephone_number %></td>
				</tr>

				<tr>
					<th>お問い合わせ内容</th>
					<td><%= @contact.contact_detail %></td>
				</tr>

				<tr>
					<th>返信ステータス</th>
					<td>
						<%= form_for(@contact, url:admins_contact_path) do |f| %>
							<%= f.select :reply_status, {"未納品": false, "納品済み": true}, {class:"form-control"}  %>
							<%= f.submit "更新", class:"btn btn-sm btn-primary" %>
						<% end %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>