<div class="row">
	<h2>お問い合わせ内容詳細</h2>

	<div class="col-xs-7">
		<label class="col-xs-3">日時</label>
		<div class="col-xs-3">
			<%= @contact.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
		</div>

		<label class="col-xs-3">氏名</label>
		<div class="col-xs-3">
			<%= @contact.name %>
		</div>

		<label class="col-xs-3">会社名</label>
		<div class="col-xs-3">
			<%= @contact.company_name %>
		</div>

		<label class="col-xs-3">メールアドレス</label>
		<div class="col-xs-3">
			<%= @contact.email %>
		</div>

		<label class="col-xs-3">電話番号</label>
		<div class="col-xs-3">
			<%= @contact.telephone_number %>
		</div>

		<label class="col-xs-3">お問い合わせ内容</label>
		<div class="col-xs-3">
			<%= @contact.contact_detail %>
		</div>
	</div>
</div>