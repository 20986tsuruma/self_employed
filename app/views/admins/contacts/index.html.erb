<div class="row">
	<h2>お問い合わせ一覧</h2>

	<div class="col-xs-12">
		<table class="table">
			<thead>
				<th>日時</th>
				<th>氏名</th>
				<th>会社名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</thead>

			<tbody>
				<% @contacts.each do |contact| %>
				    <tr>
				    	<td><%= link_to admins_contact_path(contact) do %>
				    		<%= contact.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
				    		<% end %>
				    	</td>
				    	<td><%= contact.name %></td>
				    	<td><%= contact.company_name %></td>
				    	<td><%= contact.email %></td>
				    </tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>